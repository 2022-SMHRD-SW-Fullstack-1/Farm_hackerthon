<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/clMovie"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tvRank"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="순위"
        app:layout_constraintBottom_toBottomOf="@+id/tvMovieNm"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tvOAN" />

    <TextView
        android:id="@+id/tvOAN"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="OldAndNew"
        app:layout_constraintStart_toEndOf="@+id/tvRank"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvMovieNm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="영화제목"
        app:layout_constraintStart_toStartOf="@+id/tvOAN"
        app:layout_constraintTop_toBottomOf="@+id/tvOAN" />

    <TextView
        android:id="@+id/tvAudi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="관객수"
        app:layout_constraintBottom_toBottomOf="@+id/textView5"
        app:layout_constraintStart_toStartOf="@+id/tvMovieNm" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="관객수"
        app:layout_constraintEnd_toEndOf="@+id/tvRank"
        app:layout_constraintStart_toStartOf="@+id/tvRank"
        app:layout_constraintTop_toBottomOf="@+id/tvRank" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="개봉일자"
        app:layout_constraintBottom_toBottomOf="@+id/textView5"
        app:layout_constraintStart_toEndOf="@+id/tvAudi" />

    <TextView
        android:id="@+id/tvOpenDt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="개봉일자"
        app:layout_constraintBottom_toBottomOf="@+id/textView5"
        app:layout_constraintStart_toEndOf="@+id/textView6" />
</androidx.constraintlayout.widget.ConstraintLayout>